<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView" />

    <style name="TextView.Title">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Badge">
        <item name="android:textSize">@dimen/text_size_badge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="MyRippleBackgroundBorderless">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.AccentProgressBar">
        <item name="colorAccent">@color/colorBlue</item> <!-- Whatever color you want-->
    </style>

</resources>
